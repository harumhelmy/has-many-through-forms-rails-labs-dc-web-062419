<h1>Create a new post!</h1>

<%= form_for(@post) do |f| %>
    <%= f.label :title %> <br>
    <%= f.text_field :title %> <br>

    <%= f.label :content %> <br>
    <%= f.text_area :content %> <br>
    
    <%= f.label "Post category" %> <br>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %> <br>
    <%= f.fields_for :categories, post.categories.build do |fields| %> 
        <%= fields.label :name, "Create new category" %> <br>
        <%= fields.text_field :name %> <br>
        <% end %>
         
    <%= f.submit %>
<% end %>
